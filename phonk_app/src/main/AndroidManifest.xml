<manifest
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     package="org.phonk">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="24" />

    <!-- android:resizeableActivity = "true" -->

    <application
        android:name="io.phonk.App"
        android:icon="@drawable/phonk_icon"
        android:label="@string/app_name"
        android:allowBackup="true"
        android:theme = "@style/Theme.AppCompat"
        tools:replace="android:allowBackup"
        android:resizeableActivity="true"
        >

        <activity
            android:name="io.phonk.LauncherActivity"
            android:icon="@drawable/phonk_icon"
            android:label="@string/activity_name"
            android:logo="@drawable/phonk_icon"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:resizeableActivity="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="org.protocoder.LauncherActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
                <!--<category android:name="android.intent.category.HOME"/>-->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.ASSIST" />
                <category android:name="android.intent.category.DEFAULT" >
                </category>
            </intent-filter>
        </activity>


        <!--android:stateNotNeeded="true"-->
        <activity
            android:name="io.phonk.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:icon="@drawable/phonk_icon"
            android:label="@string/activity_name"
            android:logo="@drawable/phonk_icon"
            android:theme="@style/PhonkAppTheme"
            android:resizeableActivity="true">

            <intent-filter>
                <action android:name="org.protocoder.intent.EXECUTE"></action>
            </intent-filter>

            <!--
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            -->

            <intent-filter>
                <action android:name="android.intent.action.ASSIST" />
                <category android:name="android.intent.category.DEFAULT" >
                </category>
            </intent-filter>

            <!--
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            -->

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />

        </activity>

        <activity
            android:name="io.phonk.WelcomeActivity"
            android:theme="@style/PhonkAppTheme"
            android:label="@string/welcome_activity_name" >
        </activity>
        <activity
            android:name="io.phonk.gui.settings.SettingsActivity"
            android:theme="@style/PhonkAppTheme"
            android:label="@string/settings_activity_name" >
        </activity>
        <activity
            android:name="io.phonk.gui.editor.EditorActivity"
            android:theme="@style/PhonkAppTheme"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/editor_activity_name" >
        </activity>
        <activity
            android:name="io.phonk.gui.LicenseActivity"
            android:theme="@style/PhonkAppTheme"
            android:label="Licenses" >
        </activity>
        <activity
            android:name="io.phonk.gui.SchedulerActivity"
            android:theme="@style/PhonkAppTheme"
            android:label="Scheduler" >
        </activity>
        <activity
            android:name="io.phonk.gui.HelpActivity"
            android:theme="@style/PhonkAppTheme"
            android:label="Help" >
        </activity>
        <activity
            android:name="io.phonk.gui.AboutActivity"
            android:theme="@style/PhonkAppTheme"
            android:label="About" >
        </activity>
        <activity
            android:name="io.phonk.gui.InfoScriptActivity"
            android:theme="@style/PhonkAppTheme"
            android:label="InfoScript" >
        </activity>

        <activity android:name="io.phonk.gui.ProtoAppInstallerActivity"
            android:label="@string/activity_name"
            android:theme="@style/PhonkAppTheme"
            android:logo="@drawable/phonk_icon"
            >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="org.protocoder.gui.ProtoAppInstallerActivity" />
                <data android:scheme="file" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.proto" />
                <data android:host="*" />
            </intent-filter>
        </activity>

        <service
            android:name="io.phonk.server.ProtocoderServerService"
            android:exported="false">

            <intent-filter>
                <action android:name="org.protocoder.intent.CONSOLE"></action>
            </intent-filter>

            <intent-filter>
                <action android:name="org.protocoder.intent.WEBEDITOR_SEND"></action>
            </intent-filter>

            <!-- intent when apprunner is closed -->
            <intent-filter>
                <action android:name="org.protocoder.intent.CLOSED"></action>
            </intent-filter>

            <!-- intent to close the runner -->
            <intent-filter>
                <action android:name="org.protocoder.intent.VIEWS_UPDATE"></action>
            </intent-filter>
        </service>

        <receiver android:name="io.phonk.server.ProtocoderBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="org.phonk.fileprovider"
            android:grantUriPermissions="true"
            android:exported="false">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />

        </provider>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="e695b3cb70f0d5818228eba14be7c84ecff849cf" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

</manifest>
